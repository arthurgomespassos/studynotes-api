{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/first": "off",
    "no-param-reassign": "off",
    "no-shadow": "off",
    "camelcase": "off",
    "implicit-arrow-linebreak": "off",
    "no-throw-literal": "warn",
    "allowForLoopAfterthoughts": "on"
  }
}
